{
    "version": "0.2.0",
    "configurations": [
         {
            "name": "(Ubuntu) Debug portfolio_plusplus",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/portfolio_plusplus",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                { "description": "Enable pretty-printing for gdb", "text": "-enable-pretty-printing", "ignoreFailures": true }
            ]
        },
        {
            "name": "(macOS) Debug portfolio_plusplus",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/portfolio_plusplus",
            "args": [],
            "cwd": "${workspaceFolder}",
        }
    ]
}